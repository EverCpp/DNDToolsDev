<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abilityItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@drawable/shape_content_square">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/abilityItemTextName"
        style="@style/label_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:longClickable="false"
        android:paddingTop="@dimen/content_stroke"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/abilityItemLayout"
        app:layout_constraintTop_toTopOf="@+id/abilityItemLayout"
        tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck"
        tools:text="Habilidad" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abilityItemTextName">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/abilityItemTextValue"
            style="@style/label_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:longClickable="false"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/abilityItemTextBonus"
            style="@style/label_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:longClickable="false"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="+3" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>