<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- <solid android:color="@color/but_blue_press_bg"/> -->
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="@color/yellow_normal"
                android:centerColor="@color/yellow_light"
                android:endColor="@color/yellow_normal"
                />
            <stroke android:color="@color/brown_dark" android:width="3dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- <solid android:color="@color/but_blue_normal_bg"/>-->
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="@color/brown_normal"
                android:centerColor="@color/brown_light"
                android:endColor="@color/brown_normal"
                />
            <stroke android:color="@color/brown_very_dark" android:width="3dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>
